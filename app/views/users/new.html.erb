<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :admin %>
    <%= f.check_box :admin %>
    <br>

    <div class="field<%=' field_with_errors' if @user.errors[:name].any?%>">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <br>

    <div class="field<%=' field_with_errors' if @user.errors[:password].any?%>">
    <%= f.label :password %>
    <%= f.password_field :password %>
    </div>
    <br>

    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <br>

    <%= f.submit "Sign Up"%>
<% end %>