<%= form_for @user do |f| %>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
    <br>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :bio %>
    <%= f.text_field :bio %>
    <br>

    <%= f.submit "Sign Up"%>
<% end %>